---
// Services.astro
---

<section class="py-8 px-4 sm:px-6 lg:px-8 max-w-6xl mx-auto">
  <div class="space-y-6">
    <div>
      <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">Connected Services</h2>
      <p class="text-slate-600 dark:text-slate-400">Backend MCP servers providing tools, resources, and prompts</p>
    </div>

    <div class="grid sm:grid-cols-2 gap-4">
      <!-- Journey Service -->
      <div class="group p-4 rounded-lg border border-slate-200 dark:border-slate-700 hover:border-accent/50 hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-all">
        <div class="flex items-start gap-3">
          <div class="w-10 h-10 rounded-lg bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center flex-shrink-0">
            <span class="text-lg font-bold text-blue-600 dark:text-blue-400">J</span>
          </div>
          <div class="flex-1 min-w-0">
            <h3 class="font-semibold text-slate-900 dark:text-white">Journey Service</h3>
            <p class="text-sm text-slate-600 dark:text-slate-400">Travel and navigation tools</p>
            <div class="flex items-center gap-2 mt-2">
              <div class="w-2 h-2 rounded-full bg-green-500"></div>
              <span class="text-xs text-green-600 dark:text-green-400 font-medium">Healthy</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Swiss Mobility -->
      <div class="group p-4 rounded-lg border border-slate-200 dark:border-slate-700 hover:border-accent/50 hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-all">
        <div class="flex items-start gap-3">
          <div class="w-10 h-10 rounded-lg bg-red-100 dark:bg-red-900/30 flex items-center justify-center flex-shrink-0">
            <span class="text-lg font-bold text-red-600 dark:text-red-400">SM</span>
          </div>
          <div class="flex-1 min-w-0">
            <h3 class="font-semibold text-slate-900 dark:text-white">Swiss Mobility</h3>
            <p class="text-sm text-slate-600 dark:text-slate-400">Public transportation data</p>
            <div class="flex items-center gap-2 mt-2">
              <div class="w-2 h-2 rounded-full bg-yellow-500"></div>
              <span class="text-xs text-yellow-600 dark:text-yellow-400 font-medium">Degraded</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Aareguru -->
      <div class="group p-4 rounded-lg border border-slate-200 dark:border-slate-700 hover:border-accent/50 hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-all">
        <div class="flex items-start gap-3">
          <div class="w-10 h-10 rounded-lg bg-cyan-100 dark:bg-cyan-900/30 flex items-center justify-center flex-shrink-0">
            <span class="text-lg font-bold text-cyan-600 dark:text-cyan-400">AG</span>
          </div>
          <div class="flex-1 min-w-0">
            <h3 class="font-semibold text-slate-900 dark:text-white">Aareguru</h3>
            <p class="text-sm text-slate-600 dark:text-slate-400">River water information</p>
            <div class="flex items-center gap-2 mt-2">
              <div class="w-2 h-2 rounded-full bg-green-500"></div>
              <span class="text-xs text-green-600 dark:text-green-400 font-medium">Healthy</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Open Meteo -->
      <div class="group p-4 rounded-lg border border-slate-200 dark:border-slate-700 hover:border-accent/50 hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-all">
        <div class="flex items-start gap-3">
          <div class="w-10 h-10 rounded-lg bg-orange-100 dark:bg-orange-900/30 flex items-center justify-center flex-shrink-0">
            <span class="text-lg font-bold text-orange-600 dark:text-orange-400">OM</span>
          </div>
          <div class="flex-1 min-w-0">
            <h3 class="font-semibold text-slate-900 dark:text-white">Open Meteo</h3>
            <p class="text-sm text-slate-600 dark:text-slate-400">Weather and climate data</p>
            <div class="flex items-center gap-2 mt-2">
              <div class="w-2 h-2 rounded-full bg-yellow-500"></div>
              <span class="text-xs text-yellow-600 dark:text-yellow-400 font-medium">Degraded</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

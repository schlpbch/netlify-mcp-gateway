---
interface Props {
  title?: string;
}

const { title = 'MCP Gateway' } = Astro.props;
---

<header class="sticky top-0 z-50 bg-white/80 dark:bg-slate-900/80 backdrop-blur-lg border-b border-slate-200 dark:border-slate-800 supports-[backdrop-filter]:bg-white/60 dark:supports-[backdrop-filter]:bg-slate-900/60">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
    <div class="flex items-center justify-between gap-4">
      <!-- Logo -->
      <div class="flex items-center gap-3 min-w-0">
        <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-lg bg-gradient-to-br from-accent to-accent/70 flex items-center justify-center flex-shrink-0">
          <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m0 0a9 9 0 010 18H9m0-18a9 9 0 110 18H9m0 0V3m0 18H3m0-9h18m-9-9v18"></path>
          </svg>
        </div>
        <div class="min-w-0">
          <h1 class="text-lg sm:text-xl font-bold text-slate-900 dark:text-white truncate">{title}</h1>
          <p class="text-xs sm:text-sm text-slate-600 dark:text-slate-400">Protocol Gateway</p>
        </div>
      </div>

      <!-- Right side actions -->
      <div class="flex items-center gap-2 sm:gap-3 flex-shrink-0">
        <!-- Status indicator -->
        <div class="flex items-center gap-1.5 px-2 sm:px-3 py-1.5 bg-green-50 dark:bg-green-900/20 rounded-lg">
          <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
          <span class="text-xs font-medium text-green-700 dark:text-green-300 whitespace-nowrap">Online</span>
        </div>

        <!-- Dashboard button -->
        <a href="/dashboard" class="p-2 sm:p-2.5 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white transition-colors" title="Dashboard">
          <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </a>

        <!-- Theme toggle -->
        <button id="theme-toggle" class="p-2 sm:p-2.5 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white transition-colors" title="Toggle theme">
          <svg id="sun-icon" class="w-5 h-5 sm:w-6 sm:h-6 hidden dark:block" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
          <svg id="moon-icon" class="w-5 h-5 sm:w-6 sm:h-6 block dark:hidden" fill="currentColor" viewBox="0 0 24 24">
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>

<script>
  const themeToggle = document.getElementById('theme-toggle');
  
  themeToggle?.addEventListener('click', () => {
    const html = document.documentElement;
    if (html.classList.contains('dark')) {
      html.classList.remove('dark');
      localStorage.theme = 'light';
    } else {
      html.classList.add('dark');
      localStorage.theme = 'dark';
    }
  });
</script>

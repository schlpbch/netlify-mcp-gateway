---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Base title="Dashboard - MCP Gateway">
  <Header title="MCP Gateway" />
  
  <main class="min-h-[calc(100vh-120px)] bg-gradient-to-br from-white to-slate-50 dark:from-slate-950 dark:to-slate-900 py-8 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <div class="space-y-6">
        <div>
          <h1 class="text-3xl font-bold text-slate-900 dark:text-white mb-2">Dashboard</h1>
          <p class="text-slate-600 dark:text-slate-400">Real-time gateway metrics and server health</p>
        </div>

        <!-- Loading state -->
        <div id="dashboard-content" class="text-center py-12">
          <div class="inline-block">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-accent"></div>
          </div>
          <p class="mt-4 text-slate-600 dark:text-slate-400">Loading dashboard...</p>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />

  <script>
    async function loadDashboard() {
      try {
        const response = await fetch('/metrics');
        const metrics = await response.json();
        
        const content = document.getElementById('dashboard-content')!;
        
        content.innerHTML = `
          <div class="grid md:grid-cols-2 gap-6">
            <div class="p-6 rounded-lg bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700">
              <h3 class="text-sm font-medium text-slate-600 dark:text-slate-400 mb-2">Total Requests</h3>
              <p class="text-3xl font-bold text-slate-900 dark:text-white">${metrics.totalRequests || 0}</p>
            </div>
            
            <div class="p-6 rounded-lg bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700">
              <h3 class="text-sm font-medium text-slate-600 dark:text-slate-400 mb-2">Error Rate</h3>
              <p class="text-3xl font-bold text-slate-900 dark:text-white">${((metrics.errorRate || 0) * 100).toFixed(2)}%</p>
            </div>
            
            <div class="p-6 rounded-lg bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700">
              <h3 class="text-sm font-medium text-slate-600 dark:text-slate-400 mb-2">Avg Latency</h3>
              <p class="text-3xl font-bold text-slate-900 dark:text-white">${(metrics.avgLatency || 0).toFixed(0)}ms</p>
            </div>
            
            <div class="p-6 rounded-lg bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700">
              <h3 class="text-sm font-medium text-slate-600 dark:text-slate-400 mb-2">Cache Hit Rate</h3>
              <p class="text-3xl font-bold text-slate-900 dark:text-white">${((metrics.cacheHitRate || 0) * 100).toFixed(2)}%</p>
            </div>
          </div>
          
          <div class="mt-8 p-6 rounded-lg bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700">
            <h3 class="font-semibold text-slate-900 dark:text-white mb-4">Backend Services</h3>
            <div class="space-y-3">
              ${Object.entries(metrics.backends || {}).map(([name, status]: [string, any]) => `
                <div class="flex items-center justify-between p-3 rounded bg-slate-50 dark:bg-slate-900">
                  <span class="font-medium text-slate-900 dark:text-white">${name}</span>
                  <div class="flex items-center gap-2">
                    <div class="w-2 h-2 rounded-full ${status.healthy ? 'bg-green-500' : 'bg-red-500'}"></div>
                    <span class="text-sm text-slate-600 dark:text-slate-400">${status.healthy ? 'Healthy' : 'Unhealthy'}</span>
                  </div>
                </div>
              `).join('')}
            </div>
          </div>
        `;
      } catch (error) {
        document.getElementById('dashboard-content')!.innerHTML = `
          <div class="text-red-600 dark:text-red-400">
            <p>Error loading dashboard: ${error}</p>
          </div>
        `;
      }
    }
    
    loadDashboard();
    // Refresh every 10 seconds
    setInterval(loadDashboard, 10000);
  </script>
</Base>

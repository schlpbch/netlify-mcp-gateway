{
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"],
    "strict": true
  },
  "imports": {
    "@netlify/edge-functions": "https://edge.netlify.com/v1/index.ts",
    "@netlify/blobs": "https://edge.netlify.com/blobs/index.ts"
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --allow-import --watch dev.ts",
    "start": "deno run --allow-net --allow-env --allow-read --allow-import dev.ts",
    "test": "deno test --allow-net --allow-env --allow-read --allow-import",
    "check": "deno check netlify/edge-functions/mcp.ts src/**/*.ts dev.ts",
    "lint": "deno lint src/ netlify/",
    "fmt": "deno fmt src/ netlify/ dev.ts",
    "fmt:check": "deno fmt --check src/ netlify/ dev.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true
  }
}
